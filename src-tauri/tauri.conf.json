{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "pnpm build",
		"beforeDevCommand": "pnpm dev",
		"devPath": "http://localhost:5173",
		"distDir": "../dist"
	},
	"package": {
		"productName": "overseers-manual-df",
		"version": "../package.json"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"dialog": {
				"all": false,
				"open": true
			},
			"fs": {
				"scope": [
					"**"
				],
				"all": false,
				"readDir": true
			},
			"window": {
				"all": false,
				"setTitle": true
			}
		},
		"bundle": {
			"active": true,
			"category": "Reference",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "games.nwest.dwarffortress.overseer-manual",
			"shortDescription": "Overseer's Reference Manual for Dwarf Fortress",
			"longDescription": "A utility to make it easier to get details about the creatures and other things represented in raws for your Dwarf Fortress saves.",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": "",
				"wix": {
					"template": "custom.wxs"
				}
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": true,
			"dialog": true,
			"endpoints": [
				"https://tauri-update-server.nwest.workers.dev/v1/{{target}}/{{arch}}/{{current_version}}"
			],
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE2QjA3NUFBMzhGNEVFNTkKUldSWjd2UTRxbld3cHVxZzh5OTBJNDE3bU5pT3pneGtpUjVjVXhMTmZ4NDZmaHVHQ0srK3E2QzQK"
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"resizable": true,
				"title": "Overseer's Reference Manual for Dwarf Fortress",
				"width": 800
			}
		]
	}
}