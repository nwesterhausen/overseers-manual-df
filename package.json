{
  "name": "overseers-manual-df",
  "version": "0.12.0",
  "description": "Tauri app to provide Dwarf Fortress players with personalized raws-accurate references.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "tauri": "tauri",
    "af": "prettier --write src docs README.md index.html .github/workflows",
    "lint": "eslint --fix ."
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:nwesterhausen/overseers-manual-df.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.1",
    "@solid-primitives/context": "^0.1.0",
    "@solid-primitives/scheduled": "^1.0.0",
    "@tauri-apps/cli": "1.0.0-rc.13",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "bootswatch": "^5.1.3",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.17.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "semantic-release": "^19.0.3",
    "solid-bootstrap": "^1.0.8",
    "solid-icons": "^0.5.0",
    "typescript": "^4.7.3",
    "vite": "^2.9.12",
    "vite-plugin-solid": "^2.2.6"
  },
  "dependencies": {
    "@tauri-apps/api": "1.0.0-rc.7",
    "solid-js": "^1.4.4",
    "tauri-plugin-store-api": "github:tauri-apps/tauri-plugin-store#dev"
  },
  "prettier": {
    "bracketSameLine": true,
    "jsxSingleQuote": true,
    "printWidth": 120,
    "proseWrap": "always",
    "singleQuote": true
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md",
            "package.json"
          ],
          "message": "chore: ðŸ”– release ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
