{
  "name": "overseers-manual-df",
  "version": "0.25.2",
  "description": "Tauri app to provide Dwarf Fortress players with personalized raws-accurate references.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "tauri": "tauri",
    "af": "prettier --write src docs README.md index.html .github/workflows",
    "lint": "eslint --fix ."
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:nwesterhausen/overseers-manual-df.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.0",
    "@solid-primitives/context": "^0.2.1",
    "@solid-primitives/scheduled": "^1.4.1",
    "@tailwindcss/typography": "^0.5.10",
    "@tauri-apps/cli": "1.4.0",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "autoprefixer": "^10.4.15",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "daisyui": "^3.7.3",
    "eslint": "^8.49.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "postcss": "^8.4.29",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^12.0.1",
    "prettier": "^3.0.3",
    "semantic-release": "22.0.0",
    "solid-icons": "^1.0.12",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-solid": "^2.7.0"
  },
  "dependencies": {
    "@tauri-apps/api": "1.4.0",
    "minisearch": "^6.1.0",
    "solid-js": "^1.7.11"
  },
  "prettier": {
    "bracketSameLine": true,
    "jsxSingleQuote": true,
    "printWidth": 120,
    "proseWrap": "always",
    "singleQuote": true
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md",
            "package.json"
          ],
          "message": "chore: ðŸ”– release ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
