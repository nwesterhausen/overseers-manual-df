{
  "name": "overseers-manual-df",
  "version": "0.23.9",
  "description": "Tauri app to provide Dwarf Fortress players with personalized raws-accurate references.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "tauri": "tauri",
    "af": "prettier --write src docs README.md index.html .github/workflows",
    "lint": "eslint --fix ."
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:nwesterhausen/overseers-manual-df.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@popperjs/core": "^2.11.6",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/commit-analyzer": "^10.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^10.0.0",
    "@solid-primitives/context": "^0.2.0",
    "@solid-primitives/scheduled": "^1.2.0",
    "@tauri-apps/cli": "1.4.0",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "bootstrap": "5.3.0",
    "bootswatch": "^5.2.3",
    "conventional-changelog-conventionalcommits": "^6.0.0",
    "eslint": "^8.30.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "prettier": "^2.8.1",
    "sass": "^1.57.1",
    "semantic-release": "^21.0.0",
    "solid-bootstrap": "^1.0.13",
    "solid-icons": "^1.0.4",
    "typescript": "^5.0.0",
    "vite": "^4.0.3",
    "vite-plugin-solid": "^2.5.0"
  },
  "dependencies": {
    "@tauri-apps/api": "1.4.0",
    "minisearch": "^6.0.0",
    "solid-js": "^1.6.6"
  },
  "prettier": {
    "bracketSameLine": true,
    "jsxSingleQuote": true,
    "printWidth": 120,
    "proseWrap": "always",
    "singleQuote": true
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md",
            "package.json"
          ],
          "message": "chore: ðŸ”– release ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
