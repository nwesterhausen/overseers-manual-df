{
  "name": "overseers-manual-df",
  "version": "0.27.0",
  "description": "Tauri app to provide Dwarf Fortress players with personalized raws-accurate references.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "tauri": "tauri",
    "af": "prettier --write src docs README.md index.html .github/workflows",
    "lint": "eslint --fix ."
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:nwesterhausen/overseers-manual-df.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.0",
    "@solid-primitives/context": "^0.2.1",
    "@solid-primitives/scheduled": "^1.4.1",
    "@tailwindcss/typography": "^0.5.10",
    "@tauri-apps/cli": "2.0.0-alpha.16",
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "autoprefixer": "^10.4.16",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "daisyui": "^3.9.3",
    "eslint": "^8.51.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^12.0.1",
    "prettier": "^3.0.3",
    "semantic-release": "22.0.5",
    "solid-icons": "^1.0.12",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-solid": "^2.7.2"
  },
  "dependencies": {
    "@solidjs/router": "^0.8.3",
    "@tauri-apps/api": "2.0.0-alpha.9",
    "@tauri-apps/plugin-dialog": "github:tauri-apps/tauri-plugin-dialog#v2",
    "@tauri-apps/plugin-fs": "github:tauri-apps/tauri-plugin-fs#v2",
    "@tauri-apps/plugin-log": "github:tauri-apps/tauri-plugin-log#v2",
    "@tauri-apps/plugin-store": "github:tauri-apps/tauri-plugin-store#v2",
    "@tauri-apps/plugin-window-state": "github:tauri-apps/tauri-plugin-window-state#v2",
    "solid-js": "^1.8.3"
  },
  "prettier": {
    "bracketSameLine": true,
    "jsxSingleQuote": true,
    "printWidth": 120,
    "proseWrap": "always",
    "singleQuote": true
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md",
            "package.json"
          ],
          "message": "chore: ðŸ”– release ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
